{
  "name": "project-ebytr",
  "version": "0.1.0",
  "description": "App estilo todo list para o desafio de blitz de carreira da Trybe",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "cy:open": "cypress open",
    "dev:api": "cd api && yarn dev",
    "dev:ui": "cd ui && yarn dev",
    "dev": "yarn dev:api & yarn dev:ui",
    "postinstall": "cd api && yarn; cd ../ui && yarn",
    "prepare": "husky install",
    "test:compile": "yarn tsc --noEmit",
    "test:api": "cd api && yarn test",
    "test:api:coverage": "cd api && yarn test:coverage",
    "test:lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "test:ui": "cd ui && yarn test",
    "test:unit": "yarn test:api && yarn test:ui --run",
    "test": "yarn test:compile && yarn test:lint && yarn test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonathan-f-silva/project-ebytr.git"
  },
  "keywords": [
    "express",
    "mongo",
    "react",
    "node"
  ],
  "author": "Jonathan Ferreira <j0n4t@hotmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonathan-f-silva/project-ebytr/issues"
  },
  "homepage": "https://github.com/jonathan-f-silva/project-ebytr#readme",
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "cypress": "^9.6.1",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-trybe-backend": "^1.0.4",
    "eslint-config-trybe-frontend": "^1.2.3",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-mocha": "^10.0.4",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "husky": "^8.0.1",
    "typescript": "^4.6.4"
  }
}
